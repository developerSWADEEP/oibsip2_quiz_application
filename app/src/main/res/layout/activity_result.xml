<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">


    <TextView
        android:id="@+id/correcttextview"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#F40707"
        android:layout_marginTop="125dp"
        android:textSize="22dp"
        android:textAlignment="center"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/wrongtextview"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#3AF407"
        android:textSize="22dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_marginTop="35dp"
        android:layout_below="@id/correcttextview"/>

    <TextView
        android:id="@+id/finaltextview"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#FFE501"
        android:layout_marginTop="35dp"
        android:textSize="22dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_below="@+id/wrongtextview"/>

</RelativeLayout>